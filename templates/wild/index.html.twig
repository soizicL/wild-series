{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <section class="series text-center">
    <h1>Bienvenue sur WildSéries </h1>
    <div class="row justify-content-around">
        {% for program in programs %}
            <div class="flex-column">
                <div class="card-deck my-5">
                    <div class="card " style="width: 18rem; height:auto">
                        <img src="{{program.poster}}" class="card-img-top" alt="poster" style="height: 400px;">
                        <div class="card-body" style="height:500px">
                            <h5 class="card-title">{{ program.title }}</h5>
                            <p class="card-text">{{ program.summary }}</p>

                            <a href="show/{{ (program.title|replace({" ":"-"}) | title)|lower }}" class="btn btn-primary">Choisir</a>
                        </div>
                    </div>
                </div>

            </div>

        {% else %}
            Aucune série trouvée.
        {% endfor %}
    </div>

        <p>
            {{ form_start(form) }}

            {{ form_row(form.searchField) }}

            <button type="submit" name="btnSearch">Rechercher</button>

            {{ form_end(form) }}

        </p>

        <p>
            {{ form_start(formname) }}

            {{ form_row(formname.name) }}

            <button class="btn">{{ button_label|default('Save') }}</button>

            {{ form_end(form) }}
        </p>

        <a href="{{ path('index') }}">
            Retour à l'accueil
        </a>

    </section>
{% endblock %}