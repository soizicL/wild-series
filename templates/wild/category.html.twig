{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}All categories{% endblock %}

{% block body %}


        <h1 class="text-center pt-3 pb-3">Category : {{ category.name }}</h1>

        <div class="container-fluid">
            <div class="d-flex justify-content-center">
                <div class="row justify-content-center">
                    {% for program in programs %}
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4 col-xl-4 text-center pb-4">
                            <div class="card-deck formatCardDeck">
                                <div class="card formatCard" >
                                    <img class="card-img-top formatImg" src="{{ program.poster }}" alt="{{ program.title }} poster">
                                    <div class="card-body ">
                                        <h5 class="card-title">{{ program.id }} - {{ program.title  }}</h5>
                                        <p class="card-text">{{ program.summary }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>




        <a href="{{ path('wild_index') }}">
            Retour Ã  l'accueil
        </a>


{% endblock %}